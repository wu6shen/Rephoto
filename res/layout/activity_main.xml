<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wu6shen.rephoto.MainActivity">

    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/info"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/image"/>

    <TextView
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:id="@+id/saveText"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"/>

    <com.example.wu6shen.rephoto.SaveButtonView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/testButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="10dp"
        />

    <com.example.wu6shen.rephoto.OpenButtonView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/openButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="10dp"
        />

    <com.example.wu6shen.rephoto.CloseButtonView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/close_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"/>


    <Button
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:background="@drawable/snap_button"
        android:id="@+id/take_pircture"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />


</RelativeLayout>

